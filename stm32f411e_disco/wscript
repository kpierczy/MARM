#!/usr/bin/env python

# Example waf script for STM32F411 discovery

# Projects list
_prjs = [
    'lab0_led_blink',
    'lab1_counter',
    'lab2_timer',
    'lab3_serial',
    'lab4_spi_i2c'
]

#Additional extra libraries
_libs = [
    'stm32f411e_disco/board'
]

import os

# Configure
def configure( cfg ):
    for lib in _libs:
        cfg.recurse( os.path.join(os.getcwd(),lib) )
    cfg.recurse( _prjs )


# Build
def build( bld ):
    for lib in _libs:
        bld.recurse( os.path.join(os.getcwd(),lib) )
    bld.recurse( _prjs )
